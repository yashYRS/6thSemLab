#include<mpi.h>
#include<stdio.h>
int main(int argc, char *argv[]) {
	int rank, size ;
	int a = 10 , b = 4, res_add, res_sub, res_mul;
	float res_div ;
	MPI_Init(&argc,&argv);
	MPI_Comm_rank(MPI_COMM_WORLD,&rank) ;
	MPI_Comm_size(MPI_COMM_WORLD,&size) ;
	if (rank == 0)
		res_add = a + b ;
	else if (rank == 1)
		res_sub = a - b ;
	else if (rank == 2)
		res_mul = a*b ;
	else
		res_div = (float)a/(float)b ;
	MPI_Finalize();
	printf(" Add - %d , sub - %d, Mul - %d, Div - %f ", res_add, res_sub, res_mul, res_div) ;
	return 0 ;
}
