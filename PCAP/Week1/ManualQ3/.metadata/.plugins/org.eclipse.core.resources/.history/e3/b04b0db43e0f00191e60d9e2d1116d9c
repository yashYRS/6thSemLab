#include<mpi.h>
#include<stdio.h>
int main(int argc, char *argv[]) {
	int rank, size ;
	int a, b;
	printf(" Enter a - " ) ;
	scanf("%d",&a) ;
	printf(" Enter b - ") ;
	scanf("%d",&b) ;
	MPI_Init(&argc,&argv);
	MPI_Comm_rank(MPI_COMM_WORLD,&rank) ;
	MPI_Comm_size(MPI_COMM_WORLD,&size) ;
	if (rank == 0)
		printf("\n a/b = %d", a+b ) ;
	else if (rank == 1)
		printf("\n a/b = %d", a-b) ;
	else if (rank == 2)
		printf("\n a/b = %d", a*b) ;
	else
		printf("\n a/b = %d", (float)a/b) ;
	MPI_Finalize();
	return 0 ;
}
