#include "mpi.h"
#include<stdio.h>

int main(int argc, char *argv[]) {
	int rank, size, sum1 = 0 ;
	MPI_Status status;
	MPI_Init(&argc,&argv) ;
	MPI_Comm_size(MPI_COMM_WORLD, &size) ;
	MPI_Comm_rank(MPI_COMM_WORLD, &rank) ;
	if (size != 2) {
		printf(" Run with -n 2") ;
		exit(0);
	}
	if(rank == 0) {
		int N ,sum = 0;
		printf(" Enter the size of the array ") ;
		scanf("%d",&N) ;
		int numbers[N] ;
		printf(" Enter array : ") ;
		for(int i = 1 ; i < size ; i++ )
			scanf("%d",&numbers[i]) ;
		MPI_Send(&N,1,MPI_INT,1,0,MPI_COMM_WORLD);
		MPI_Send(&N,1,MPI_INT,1,0,MPI_COMM_WORLD);
		MPI_Recv(&sum1,1,MPI_INT,2,4,MPI_COMM_WORLD) ;
	}
	else {
		MPI_Recv(&N,1,MPI_INT,0,rank,MPI_COMM_WORLD,&status) ;
		fprintf(stdout,"I have received %d in process %d\n",num,rank) ;
		fflush(stdout) ;
	}
	MPI_Finalize() ;
	return 0 ;
}
