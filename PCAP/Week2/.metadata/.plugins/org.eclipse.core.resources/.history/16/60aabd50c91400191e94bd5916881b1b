#include "mpi.h"
#include<stdio.h>

int main(int argc, char *argv[]) {
	int rank, size, num ;
	MPI_Status status;
	MPI_Init(&argc,&argv) ;
	MPI_Comm_size(MPI_COMM_WORLD, &size) ;
	MPI_Comm_rank(MPI_COMM_WORLD, &rank) ;
	if(rank == 0) {
		scanf('%d',num) ;
		MPI_Send(&num,1,MPI_INT,1,0,MPI_COMM_WORLD) ;
		MPI_Recv(&num,1,MPI_INT,size-1,size-1,MPI_COMM_WORLD,&status) ;
	}
	else {
		MPI_Recv(&num,1,MPI_INT,(rank-1)%size,(rank-1)%size,MPI_COMM_WORLD,&status) ;
		MPI_Send(&num,1,MPI_INT,(rank+1)%size,rank, MPI_COMM_WORLD ) ;
		fprintf(stdout,"I have received %d in process %d\n",num,rank) ;
		fflush(stdout) ;
	}
	MPI_Finalize() ;
	return 0 ;
}
